{
  "version": 2,
  "name": "news-dashboard",
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/aurora",
      "dest": "/index-aurora.html"
    },
    {
      "src": "/daily-summary",
      "dest": "/daily-summary.html"
    },
    {
      "src": "/world-events",
      "dest": "/world-events.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}